<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mustafacan.mustafacanyilmazbitirmeprojesi.PostDetailsFragment">


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haber Başlığı"
        android:gravity="center"
        android:id="@+id/txt_haber_basligi"
        android:textStyle="bold"
        />


    <ScrollView
        android:background="#FFFFFF"
        android:layout_below="@id/txt_haber_basligi"
        android:layout_margin="20dp"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="150dip">

        <TextView
            android:id="@+id/txt_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </ScrollView>

    <TextView
        android:layout_below="@id/scroll_view"
        android:gravity="center"
        android:id="@+id/txt_ekleyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />

    <TextView
        android:layout_below="@+id/txt_ekleyen"
        android:id="@+id/lblRateMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Değerlendirme"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:layout_below="@id/lblRateMe"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="2" />

    <Button
        android:layout_below="@id/ratingBar"
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oyla" />

    <TextView
        android:layout_below="@+id/btnSubmit"
        android:id="@+id/lblResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sizin Değerlendirmeniz : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:layout_marginLeft="241dp"
        android:layout_below="@+id/btnSubmit"
        android:id="@+id/txtRatingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>
